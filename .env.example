# Use this as a reference for per-service .env files when running locally.
# Do not commit real secrets.

# Auth service (services/auth)
MONGO_URI=mongodb://localhost:27017/auth
RABBITMQ_URL=amqp://user:password@localhost:5672
JWT_KEY=change-me

# Recipe service (services/recipe)
DATABASE_URL=postgresql://user:password@localhost:5432/recipe
RABBITMQ_URL=amqp://user:password@localhost:5672
JWT_KEY=change-me

# Ingredient service (services/ingredient)
DATABASE_URL=postgresql://user:password@localhost:5432/ingredient
RABBITMQ_URL=amqp://user:password@localhost:5672

# Profile service (services/profile)
DATABASE_URL=postgresql://user:password@localhost:5432/userprofile
RABBITMQ_URL=amqp://user:password@localhost:5672

# Uploads service (services/uploads)
RABBITMQ_URL=amqp://user:password@localhost:5672
S3_BUCKET=example-bucket
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=example-access-key
S3_SECRET_ACCESS_KEY=example-secret-key

# Client (services/client)
NEXT_PUBLIC_API_URL=http://localhost:3000
